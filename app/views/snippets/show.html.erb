<h1>
    <div class="points-box rounded5">
    <%=link_to image_tag("/images/vup.png"), voteup_path(:snippet_id=>@snippet.id), :remote=>true, :method => :post%> 
    <div id="points"><%= @snippet.votes_count %></div>
    </div> <%= @snippet.name %>
</h1>

<div id="login-popup" class="rounded5 smallborder">
   <h3> You must login to vote.</h3>
    <a href="/auth/twitter?next=lol">Login with Twitter</a>
</div>

<%= @snippet.description %>

<% unless @snippet.tags.empty? %>

    <div class="tags-wrapper">
       
        <% for tag in @snippet.tags %>
             
            <%= link_to tag.name, snippets_path(:tag=>tag.name), :class=>"tag rounded10" %>
            
        <%end%>
       
    </div>
     
<%end%>

<pre id="sourcecode" class="brush: css; html-script: true; gutter: false; " ><code><%= @snippet.code %></code></pre>


<div>
   <%= link_to "Run Demo", run_path(), :target => "_blank"%>
</div>

  <%if current_user == @snippet.user%>

<p>
  <%= link_to "Edit", edit_snippet_path(@snippet) %> |
  
      <%= link_to "Destroy", @snippet, :confirm => 'Are you sure?', :method => :delete %> |
  </p>

  <%end%>
  <p>
  <%= link_to "View All Snippets", snippets_path %>
</p>
<script>
    SyntaxHighlighter.all();
</script>